<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/recg_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--第一行-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--用户id-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <TextView

                    android:textSize="15sp"
                    android:text="报修者昵称:"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/fragment_repair_item_name"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:text="1"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <!--工作状态-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <TextView

                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:text="工作状态:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/fragment_repair_item_status"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="已完成"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <!--第二行-->
        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--用户id-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="15sp"
                    android:text="设备名称:"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/fragment_repair_item_machine"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:text="美的空调"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <!--工作状态-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <TextView

                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:text="创建时间:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="15sp"
                    android:id="@+id/fragment_repair_item_time"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="2018-08-08"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>

        <View
            android:paddingTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <!--查看详情栏-->
        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_repair_item_image"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/red_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingRight="5dp"
                android:id="@+id/fragment_repair_item_text"
                android:layout_toLeftOf="@+id/fragment_repair_item_image"
                android:text="查看详情"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>