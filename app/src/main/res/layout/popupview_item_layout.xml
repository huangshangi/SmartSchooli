<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/popupvieew_listview_imageview"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp"
        android:paddingBottom="17dp"
        android:scaleType="fitXY"

        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/pic_dir"/>

    <LinearLayout
        android:layout_toRightOf="@id/popupvieew_listview_imageview"
        android:background="#fff"

        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:text="测试"
            android:gravity="center|center_vertical"
            android:id="@+id/popupvieew_listview_textname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="测试"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/popupvieew_listview_textcount"
            android:gravity="center_horizontal|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <ImageView
        android:src="@drawable/dir_choose"
        android:id="@+id/popupvieew_listview_imageview_choose"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>