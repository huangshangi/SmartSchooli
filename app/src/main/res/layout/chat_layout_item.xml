<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chat_left"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_margin="5dp"
            android:id="@+id/chat_item_Leftimage"
            android:src="@drawable/default_1"


            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:id="@+id/chat_left_image"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />


        <FrameLayout
            android:layout_margin="5dp"
            android:id="@+id/chat_left_frame"
            android:background="@drawable/left_message2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chat_item_Leftcontimage"
                android:paddingTop="5dp"
                android:background="@drawable/adj_left"
                android:layout_width="40dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:maxLines="10"
                android:maxWidth="250dp"
                android:maxHeight="500dp"
                android:gravity="center_vertical|start"
                android:layout_gravity="center_vertical|start"
                android:id="@+id/chat_item_Lefttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_right"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <FrameLayout
            android:id="@+id/chat_right_frame"
            android:background="@drawable/right_message2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:maxLines="10"
                android:maxWidth="250dp"
                android:maxHeight="500dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|start|center_horizontal"
                android:id="@+id/chat_item_Righttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:padding="0dp"
                android:gravity="center_horizontal"
                android:id="@+id/chat_item_Rightcontimage"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:background="@drawable/adj_right"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="30dp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/chat_right_image"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/chat_item_Rightimage"
            android:src="@drawable/default_1"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </LinearLayout>


</LinearLayout>