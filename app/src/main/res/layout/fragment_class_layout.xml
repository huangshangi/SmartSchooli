<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_class_layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--课程表头布局-->
    <RelativeLayout
        android:id="@+id/fragment_class_header_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/more" />


        <Button
            android:id="@+id/fragment_class_currentweek"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableRight="@drawable/fragment_class_down"
            android:text="第25周"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/fragment_class_imageView_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/fragment_class_add" />

    </RelativeLayout>


    <!--隐藏布局-->
    <LinearLayout
        android:id="@+id/fragment_class_inVisbile_layout"
        android:layout_width="wrap_content"

        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_class_inVisbile_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/beige"
            android:button="@null"
            android:drawableTop="@drawable/fragment_class_setting"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="修改当前列" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_class_inVisbile_recyclerView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

    </LinearLayout>


    <!--滑动布局-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--周1，周2...-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--空格子-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--周一-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一" />

                <TextView
                    android:id="@+id/fragment_class_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-20" />
            </LinearLayout>

            <!--周二-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二" />

                <TextView
                    android:id="@+id/fragment_class_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-21" />
            </LinearLayout>

            <!--周三-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周三" />

                <TextView
                    android:id="@+id/fragment_class_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-22" />
            </LinearLayout>
            <!--周四-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四" />

                <TextView
                    android:id="@+id/fragment_class_date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-23" />
            </LinearLayout>
            <!--周五-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周五" />

                <TextView
                    android:id="@+id/fragment_class_date5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-24" />
            </LinearLayout>
            <!--周六-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周六" />

                <TextView
                    android:id="@+id/fragment_class_date6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-25" />
            </LinearLayout>
            <!--周日-->
            <LinearLayout
                style="@style/Fragment_class_Linear_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_class_tv_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周日" />

                <TextView
                    android:id="@+id/fragment_class_date7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-26" />
            </LinearLayout>


        </LinearLayout>


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <FrameLayout
                android:id="@+id/fragment_class_framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <view.Fragment_class_listView
                    android:id="@+id/fragment_class_listView"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:dividerHeight="1dp" />

            </FrameLayout>


        </ScrollView>


    </LinearLayout>

</LinearLayout>